<div class="container mt-4">
<h2><%= @restaurant.name %></h2>
<h3>Address: <%= @restaurant.address %></h3>
<h3>Category: <%= @restaurant.category %></h3>
<ul class="list-group">
<% @restaurant.reviews.each do |review| %>
  <li class="list-group-item"><%= review.content%> Rating: <%= review.rating %></li>

<% end %>
</ul>
<%= link_to "Go to restaurants", restaurants_path, class: "btn btn-primary mt-5"%>
<%= link_to "Leave a review", new_restaurant_review_path(@restaurant), class: "btn btn-primary mt-5" %>
</div>
